{
  "compilerOptions": {
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "ES2015", "ES2021.WeakRef"],
    "module": "es2020",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018",
    "typeRoots": ["node_modules/@types", "definitions"],
    "types": ["jest", "node"]
  },
  "exclude": ["node_modules"],
  "include": ["definitions/css.d.ts", "packages/**/*.ts", "packages/**/*.tsx"]
}
